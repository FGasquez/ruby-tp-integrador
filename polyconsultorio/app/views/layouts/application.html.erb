<!DOCTYPE html>
<html>
  <head>
    <title>Polyconsultorio</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>
  <div id="navbar" class="navbar-menu">
    <div class="navbar-start">
      <%= link_to "Home", root_path, class: "navbar-item" %>
      <%= link_to "Professionals", professionals_path, class: "navbar-item" %>
      <%= link_to "Appointments", appointments_path, class: "navbar-item" %>
    </div>
  </div>

    <div class="navbar-end">
      <% if current_user %>
        <div class="navbar-item"> 
          <%= current_user.email %>
        </div>
        <%= link_to "Logout", log_out_path, method: :delete, class: "navbar-item" %>
        <% else %>
          <div class="navbar-item">
            <div class="buttons">
              <%= link_to "login", new_session_path, class: "button is-primary" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</nav>
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
