<div class="title">Log In</div>
<%= form_tag sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, class: 'input', required: true %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: 'input', required: true %>
  </div>

  <input class="button is-info" type="submit" value="Submit">
<% end %>