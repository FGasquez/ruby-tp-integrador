<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<%= link_to 'export', export_form_path, class: "button is-primary" %>

<table class="table is-fullwidth is-hoverable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Date</th>
      <th>Phone</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.name %></td>
        <td><%= appointment.surname %></td>
        <td><%= appointment.date %></td>
        <td><%= appointment.phone %></td>
        <td><%= appointment.notes %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td>
          <% if allowed_to?(:edit?, appointment) %>
            <%= link_to 'Edit', edit_appointment_path(appointment) %>
          <% end %>
        </td>
        <td>
          <% if allowed_to?(:destroy?, appointment) %>
            <%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
