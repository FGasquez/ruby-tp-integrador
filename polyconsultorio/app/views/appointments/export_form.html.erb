<h1> Export Appointments </h1>

<%= form_with do |form| %>
    <div class="field">
      <%= form.label :day, class: "label" %>
      <div class="control">
        <%= form.date_field :day %>
      </div>
    </div>
  
    <div class="field">
      <%= form.label :professional, class: "label" %>
      <div class="select">
        <%= form.select :professional_id, [["All", -1]] + Professional.all.map { |p| [p.name, p.id] }  %>
      </div>
    </div>
  
    <div class="field">
      <%= form.label "All week", class: "label" %>
      <div class="checkbox">
        <%= form.check_box :week %>
      </div>
    </div>

    <input class="button is-info" type="submit" value="Export">

  <% end %>
  